<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.1;net8.0;net9.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<Authors>WithSalt</Authors>
		<Description>基于FFmpeg实现的高性能视频录制框架，支持从多种输入源（本地视频、摄像头、网络流、桌面等）中提取连续的图像帧。 A high-performance video recording framework based on FFmpeg, which supports extracting continuous image frames from various input sources (local videos, cameras, network streams, desktops, etc.).</Description>
		<PackageProjectUrl>https://github.com/withsalt/WithSalt.FFmpeg.Recorder</PackageProjectUrl>
		<PackageReadmeFile>README_en.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/withsalt/WithSalt.FFmpeg.Recorder</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<Version>1.0.7</Version>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\README_en.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="FFMpegCore" Version="[5.2.0,]" />
		<PackageReference Include="SkiaSharp" Version="[3.119.0,]" />
		<PackageReference Include="SkiaSharp.NativeAssets.Linux" Version="[3.119.0,]" />
	</ItemGroup>
</Project>
